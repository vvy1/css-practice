
<header class='header row g-0'>
  <div class="col-3">
    {{> logo}}
  </div>
  
  <nav class='header_nav col-9'>

    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
  {{!-- {{> divider }} --}}
</header>

{{#with main}}  
  <main class="main">

    <img src="{{image}}" alt="Main image" class="main_image">

    <div class="main_content">
      <h1 class="main_title">
        {{heading}}
      </h1>
      <p class="main_text">
        {{description}}
      </p>
      <a href="{{href}}" class="button main_button ">{{button}}</a>
    </div>

  </main>
{{/with}}

<section class="featured">
  {{#each featured}}
    {{> cardFeatured data=this}} 
  {{/each}}
</section>

{{#with actions}}
  <div class="form">
    {{#each this}}
      <div class="form_content">
        <h3 class="form_title">
          {{heading}}
        </h3>
      
        <div class="form_action">
          <a href="{{url}}" class="button form_button">{{text}}</a>
        </div>
      </div>
    {{/each}}
  </div>
{{/with}}
  
<footer  class="row g-0 footer">
  <div class="col-3">
    {{> logo}}
    <span class="footer_copiright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div class="col-3">
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>



